<section class="projects">
    <h3><%= @project.name %></h3>
    <% unless @project.project_link.nil? %>
        <h4><%= link_to @project.project_link %></h4>
    <% end %>
    <p><%= @project.description %></p>
    <% @project.skills.each do |skill| %>
        <%= link_to(skill_path(skill)) do %>
            <button class="skill-button"><%= skill.name %></button>
        <% end %>
    <% end %>
</section>