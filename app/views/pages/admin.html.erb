            <p>
                <%= link_to "Show", skill_set_path(skill_set.id)%> |
                <%= link_to "Edit", edit_skill_set_path(skill_set.id)%> |
                <%= link_to "Delete", skill_set_path(skill_set.id), { :method => 'delete' }%>
            </p>
        <% end %>
    </section>
    <section>
        <p><%= link_to "Add a new experience", new_experience_path %></p>
        <h3>Edit experiences: </h3>
        <% @experiences.each do |experience| %>
            <p><%="#{experience.name}: "%></p>
            <p>
                <%= link_to "Show", experience_path(experience.id)%> |
                <%= link_to "Edit", edit_experience_path(experience.id)%> |
                <%= link_to "Delete", experience_path(experience.id), { :method => 'delete' }%>
            </p>
        <% end %>
    </section>
    <section>
        <p><%= link_to "Add a new project", new_project_path %></p>
        <h3>Edit projects: </h3>
        <% @projects.each do |project| %>
            <p><%="#{project.name}: "%></p>
            <p>
                <%= link_to "Show", project_path(project.id)%> |
                <%= link_to "Edit", edit_project_path(project.id)%> |
                <%= link_to "Delete", project_path(project.id), { :method => 'delete' }%>
            </p>
        <% end %>
    </section>
    <section>
        <p><%= link_to "Add a new job", new_job_path %></p>
        <h3>Edit jobs: </h3>
        <% @jobs.each do |job| %>
            <p><%="#{job.name}: "%></p>
            <p>
                <%= link_to "Show", job_path(job.id)%> |
                <%= link_to "Edit", edit_job_path(job.id)%> |
                <%= link_to "Delete", job_path(job.id), { :method => 'delete' } %>
            </p>
        <% end %>
    </section>   
</section>