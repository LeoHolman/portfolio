<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<%= link_to 'Sign in', new_admin_session_path unless admin_signed_in? %>
<%= link_to 'Sign out', destroy_admin_session_path, { :method => 'delete' } if admin_signed_in? %>


<section id="admin-panel">
    <section>
        <p><%= link_to "Add a new skill", new_skill_path%></p>
        <h3>Edit skills:</h3>
        <% @skills.each do |skill| %>
            <p><%="#{skill.name}: "%></p>
            <p>
                <%= link_to "Show", skill_path(skill.id)%> |
                <%= link_to "Edit", edit_skill_path(skill.id)%> |
                <%= link_to "Delete", skill_path(skill.id), { :method => 'delete' }%>
            </p>
        <% end %>
    </section>
    <section>
        <p><%= link_to "Add a new skill set", new_skill_set_path %></p>
        <h3>Edit skill sets:</h3>
